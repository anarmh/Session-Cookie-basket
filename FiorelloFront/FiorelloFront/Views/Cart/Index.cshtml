@model List<BasketDetailVM>
@{
    ViewData["Title"] = "Index";
    decimal grandTotal = 0;
}

<div class="container">
    @if (Model.Count > 0)
    {
       <table class="table">
      <thead>
       <tr>
          <th scope="col">Image</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Count</th>
          <th scope="col">Total Price</th>
           <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>
                @foreach (var item in Model)
                {
                <tr>
              <td> <img style="width:150px; height:120px;" src="~/img/@item.Image"/></td>
              <td>@item.Name</td>
              <td>@item.Price.ToString("0.####") $</td>
              <td>@item.Count</td>
              <td>@item.TotalPrice.ToString("0.####") $</td>
              <td class="color-white"> <a class="btn btn-danger color-white">Delete</a></td>
                </tr>
                    grandTotal += item.TotalPrice;
                }

      </tbody>
    </table>
        <h1>Total:@grandTotal</h1>
    }
    else
    {
    <div class="alert alert-warning" role="alert">
     Cart is empty!
    </div>
    }
</div>

